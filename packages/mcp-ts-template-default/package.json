{
  "name": "mcp-ts-template-default",
  "version": "0.3.4",
  "description": "Default project template for create-mcp-ts.",
  "author": "stephencme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stephencme/create-mcp-ts.git",
    "directory": "packages/mcp-ts-template-default"
  },
  "type": "module",
  "bin": "./dist/index.js",
  "scripts": {
    "dev": "mcp-scripts dev",
    "build": "mcp-scripts build",
    "setup": "mcp-scripts setup",
    "eject": "mcp-scripts eject",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "build:direct": "tsup src/index.ts src/toolLoader.ts --format esm --dts --clean"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.13",
    "jest": "^29.7.0",
    "mcp-scripts": "^0.3.4",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
